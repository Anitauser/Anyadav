from array import *
array_num=array("i",[1,3,5,7,9])###one dimensional arrays.
for i in array_num:
  print(i)
print("Access first three items individually")
print(array_num[0])
print(array_num[1])
print(array_num[2])


## append the number
from array import *
array_num=array('i',[1,3,5,7,9])
print("original array:"+str(array_num))
print("Append 11 at the end of the array:")
array_num.append(11)
#print("new array:"+str(array_num.itemsize))##length in bytes of one array item is 4


#write a phython program to get the length in bytes of ane array item in the internal representation.array_num.itemsize.
import numpy as np

array_num = np.array([1, 2, 3, 4, 5]) ##bytes is  memory size of  so here 
print("Length of one array item in bytes:", array_num.itemsize)##the output will show the memory of the each items

##Matplotlib codes

import matplotlib.pyplot as plt##puplot submodule ,and usaually imported under plt. Now the pyplot package can be referred to as 
import numpy as np#numerical python
xpoints=np.array([0,5])
ypoints=np.array([0,28])

plt.plot(xpoints,ypoints)##calling the function.
plt.show()

